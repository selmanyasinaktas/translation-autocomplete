{
  "compilerOptions": {
  "target": "ES2020",
  "module": "NodeNext",
  "moduleResolution": "nodenext",
  "lib": ["ES2020"],
  "declaration": true,
  "outDir": "./dist",
  "rootDir": "./",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
